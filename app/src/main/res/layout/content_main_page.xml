<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="flai.blogger.MainPage"
    tools:showIn="@layout/activity_main_page"
    android:isScrollContainer="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LinearLayout"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <!-- Save and Load buttons -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="170px"
            android:orientation="horizontal"
            tools:context=".LinearLayout" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_weight="50"
                android:text="Save"
                android:id="@+id/save_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="170px"
                android:layout_weight="50"
                android:text="Load"
                android:id="@+id/load_button"/>

        </LinearLayout>

        <!-- Title -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal"
            tools:context=".LinearLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Title:   " />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/testi"
                android:id="@+id/title_edit_text"/>

        </LinearLayout>

        <!-- Day Range -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:orientation="horizontal"
            tools:context=".LinearLayout" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Day Range:   " />

            <EditText
                android:layout_width="128px"
                android:layout_height="wrap_content"
                android:src="@drawable/testi"
                android:inputType="number"
                android:id="@+id/date_range_min"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="-" />

            <EditText
                android:layout_width="128px"
                android:layout_height="wrap_content"
                android:src="@drawable/testi"
                android:inputType="number"
                android:id="@+id/date_range_max"/>

        </LinearLayout>

        <!-- Main Image Selection -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="490px"
            android:orientation="horizontal"
            tools:context=".LinearLayout" >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkBackground"
                android:scaleType="fitCenter"
                android:src="@drawable/testi"
                android:id="@+id/mainImageButton" />

        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_marginTop="48px"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/itemList"></ListView>

        <!-- Last clicked entry image -->
        <TextView
            android:layout_marginTop="256px"
            android:text="latest clicked entry image:"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TextView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/testi"
            android:id="@+id/latest_entry_click_image"/>

    </LinearLayout>
</ScrollView>
